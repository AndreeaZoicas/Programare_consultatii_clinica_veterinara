@page
@model Programare_consultatii_clinica_veterinara.Pages.Consultatii.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Consultatii</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Consultatie[0].Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultatie[0].Medic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultatie[0].Pacient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Consultatie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                    @item.Medic.Nume
            </td>
            <td>
                    @item.Pacient.Nume
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ConsultatieID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ConsultatieID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ConsultatieID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
